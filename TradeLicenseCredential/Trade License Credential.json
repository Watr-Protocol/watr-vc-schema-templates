{
    "$metadata": {
        "uris": {
            "jsonLdContext": "https://raw.githubusercontent.com/Watr-Protocol/watr-vc-schema-templates/refs/heads/main/TradeLicenseCredential/Trade%20License%20Credential.jsonld"
        },
        "version": "1.0",
        "type": "TradeLicenseCredential"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A Verifiable Credential asserting that an entity holds a valid trade license to trade specific commodities under a jurisdiction.",
    "title": "Trade License Credential",
    "properties": {
        "credentialSubject": {
            "description": "Stores the data of the credential",
            "title": "Credential subject",
            "properties": {
                "legalName": {
                    "description": "The full registered legal name of the license holder.",
                    "title": "Legal Entity Name",
                    "type": "string"
                },
                "licenseNumber": {
                    "description": "Unique identifier for the issued trade license.",
                    "title": "License Number",
                    "type": "string"
                },
                "licenseType": {
                    "description": "Type of trade license issued to the subject.",
                    "enum": [
                        "Import License",
                        "Export License",
                        "Broker License",
                        "Dual-Use Goods License",
                        "Restricted Commodity Permit",
                        "General Trade License",
                        "Temporary Permit"
                    ],
                    "title": "License Type",
                    "type": "string"
                },
                "issuingAuthority": {
                    "description": "Authority or regulatory body that issued the license.",
                    "enum": [
                        "DGFT-India",
                        "HMRC-UK",
                        "BAFA-Germany",
                        "OFAC-USA",
                        "SECO-Switzerland",
                        "TRA-UAE",
                        "GACC-China",
                        "WatrTradeNode"
                    ],
                    "title": "Issuing Authority",
                    "type": "string"
                },
                "issueDate": {
                    "description": "Date when the license was issued.",
                    "title": "License Issue Date",
                    "format": "date",
                    "type": "string"
                },
                "expiryDate": {
                    "description": "Date when the license expires.",
                    "title": "License Expiry Date",
                    "format": "date",
                    "type": "string"
                },
                "licenseStatus": {
                    "description": "Current status of the trade license.",
                    "enum": [
                        "active",
                        "suspended",
                        "expired",
                        "revoked",
                        "underReview"
                    ],
                    "title": "License Status",
                    "type": "string"
                },
                "jurisdiction": {
                    "description": "Country or region under which the license is valid.",
                    "enum": [
                        "IN",
                        "UK",
                        "US",
                        "CH",
                        "AE",
                        "CN",
                        "DE",
                        "EU",
                        "GLOBAL"
                    ],
                    "title": "Jurisdiction",
                    "type": "string"
                },
                "commodityCategory": {
                    "description": "High-level category of goods covered by the license.",
                    "enum": [
                        "Precious Metals",
                        "Base Metals",
                        "Mineral Ores",
                        "Energy Commodities",
                        "Agricultural Commodities",
                        "Radioactive Materials",
                        "Miscellaneous"
                    ],
                    "title": "Commodity Category",
                    "type": "string"
                },
                "hsCode": {
                    "description": "Harmonized System (HS) code representing the specific commodity authorized.",
                    "enum": [
                        "7102",
                        "7106",
                        "7108",
                        "7208",
                        "7210",
                        "7304",
                        "7403",
                        "7408",
                        "7502",
                        "7601",
                        "7606",
                        "7801",
                        "7901",
                        "8001",
                        "2615",
                        "2616",
                        "2620",
                        "2710",
                        "1001",
                        "1006",
                        "0901",
                        "1511",
                        "2844",
                        "9999"
                    ],
                    "title": "HS Code",
                    "type": "string"
                },
                "restrictions": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Additional constraints or notes regarding license scope or limitations.",
                    "title": "License Restrictions"
                },
                "id": {
                    "description": "Stores the DID of the subject that owns the credential",
                    "title": "Credential subject ID",
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "legalName",
                "licenseNumber",
                "licenseType",
                "issuingAuthority",
                "issueDate",
                "expiryDate",
                "licenseStatus",
                "commodityCategory",
                "hsCode"
            ],
            "type": "object"
        },
        "@context": {
            "type": [
                "string",
                "array",
                "object"
            ]
        },
        "expirationDate": {
            "format": "date-time",
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "issuanceDate": {
            "format": "date-time",
            "type": "string"
        },
        "issuer": {
            "type": [
                "string",
                "object"
            ],
            "format": "uri",
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        },
        "type": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "credentialSchema": {
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ],
            "type": "object"
        },
        "credentialStatus": {
            "description": "Allows the discovery of information about the current status of the credential, such as whether it is suspended or revoked.",
            "title": "Credential Status",
            "properties": {
                "id": {
                    "description": "Id URL of the credentialStatus.",
                    "title": "Id",
                    "format": "uri",
                    "type": "string"
                },
                "type": {
                    "description": "Expresses the credential status type (method). The value should provide enough information to determine the current status of the credential.",
                    "title": "Type",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ],
            "type": "object"
        }
    },
    "required": [
        "credentialSubject",
        "@context",
        "id",
        "issuanceDate",
        "issuer",
        "type",
        "credentialSchema"
    ],
    "type": "object"
}
